---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Forms: inline" classes="forms">
	<article>
		<h1>Forms: inline</h1>
		<p class="instructions">
			Testing inline form submissions.
		</p>
		<form id="form-inline-get" action="/forms-inline" class="transition-fade">
			GET form
			<input type="text" name="first" placeholder="First name">
			<input type="text" name="last" placeholder="Last name">
			<select name="age">
				<option value="20">20-25</option>
				<option value="25">25-35</option>
				<option value="35">35-60</option>
			</select>
			<textarea name="message"></textarea>
			<button type="submit">Submit</button>
		</form>
		<form id="form-inline-post" action="/forms-inline" method="post" class="transition-fade">
			POST form
			<input type="text" name="first" placeholder="First name">
			<input type="text" name="last" placeholder="Last name">
			<select name="age">
				<option value="20">20-25</option>
				<option value="25">25-35</option>
				<option value="35">35-60</option>
			</select>
			<textarea name="message"></textarea>
			<button type="submit">Submit</button>
		</form>
	</article>
</Layout>

<style>
form {
	display: block;
}
input {
	width: 100%;
}
textarea {
	width: 100%;
}
select {
	width: 100%;
}
</style>
